<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_landscape"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.acer.myzhibo.ui.LandscapeActivity">
    <io.vov.vitamio.widget.VideoView
        android:id="@+id/vv_landscape"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_landscape_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/black">
        <ImageView
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:id="@+id/iv_landscape_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:src="@mipmap/sobot_webview_toolsbar_back_disable"/>
        <TextView
            android:layout_toRightOf="@id/iv_landscape_back"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20dp"
            android:id="@+id/tv_landscape_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的标题"
            android:textColor="@color/colorWhite"/>
        <ImageView

            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:id="@+id/iv_landscape_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/share_normal_white"/>
        <ImageView
            android:layout_centerInParent="true"
            android:layout_alignRight="@id/iv_landscape_share"
            android:layout_marginRight="30dp"
            android:id="@+id/iv_landscape_heart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/live_ver_focus_on"/>
        <TextView
            android:layout_alignRight="@id/iv_landscape_heart"
            android:layout_marginRight="30dp"
            android:layout_centerInParent="true"
            android:id="@+id/tv_landscape_qxd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="标清"
            android:textColor="@color/colorWhite"/>
        <TextView
            android:layout_toLeftOf="@id/tv_landscape_qxd"
            android:layout_marginRight="30dp"
            android:layout_centerInParent="true"
            android:id="@+id/tv_landscape_gift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="屏蔽礼物"
            android:textColor="@color/colorWhite"/>




    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_landscape_bottom"
        android:visibility="gone"
        android:layout_alignParentBottom="true"
        android:background="@color/black"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">
        <ImageView
            android:id="@+id/iv_landscape_pause"
            android:layout_marginLeft="10dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/btn_live_pause"/>
        <ImageView
            android:id="@+id/iv_landscape_refresh"
            android:layout_toRightOf="@id/iv_landscape_pause"
            android:layout_marginLeft="10dp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/live_hor_refresh_normal"/>
        <ImageView
            android:id="@+id/iv_landscape_gift"
            android:layout_centerInParent="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/live_gift"/>
        <ImageView
            android:id="@+id/iv_landscape_commenting"
            android:layout_centerInParent="true"
            android:layout_toLeftOf="@id/iv_landscape_gift"
            android:layout_marginRight="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/commenting_unpressed"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/edittext"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_landscape_refresh"
            android:layout_toLeftOf="@id/iv_landscape_commenting">

            <ImageView
                android:layout_marginLeft="10dp"
                android:id="@+id/iv_landscape_hot"
                android:src="@mipmap/live_hotword_pressed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <View
                android:layout_marginLeft="10dp"
                android:background="@color/thinGray"
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>
            <EditText
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:id="@+id/et_landscape"
                android:hint="弹幕走一走,活到九十九"
                android:textSize="10sp"
                android:background="@null"
                android:textColorHint="@color/thinGray"/>
            <ImageView
                android:layout_marginRight="10dp"
                android:id="@+id/iv_landscape_send"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/live_send_black"/>

        </LinearLayout>


    </RelativeLayout>



</RelativeLayout>
