<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.acer.myzhibo.ui.fragment.My.MyFragment">

    <RelativeLayout
        android:background="@color/red"

        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:id="@+id/linear_center_mine"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_centerInParent="true">
        <ImageView
            android:id="@+id/iv_mine_fragment"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/img_profile_touxiang_default_logged"

            />
        <TextView
            android:id="@+id/text_dianji_myfragment"

            android:textSize="18sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/iv_mine_fragment"
            android:layout_centerInParent="true"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_mine_left"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:src="@mipmap/duihua"/>
        <ImageView
            android:id="@+id/iv_mine_right"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@mipmap/setting"
            android:layout_margin="10dp"
            android:padding="2dp"
            android:layout_alignParentRight="true"
            />

    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/linear1_mine"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginLeft="10dp">
            <ImageView
                android:src="@mipmap/shexiangji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="房间管理"/>
            <ImageView
                android:src="@drawable/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/linear2_mine"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <ImageView
                android:src="@mipmap/ic_xin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="我的关注"/>
            <ImageView
                android:src="@drawable/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/linear3_mine"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <ImageView
                android:src="@mipmap/ic_clock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="观看历史"/>
            <ImageView
                android:src="@drawable/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/linear4_mine"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <ImageView
                android:src="@mipmap/ic_lindang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="开播提醒"/>

            <ImageView
                android:src="@drawable/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:id="@+id/linear5_mine"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center">
            <ImageView
                android:src="@mipmap/ic_renwu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="种子任务"
                android:id="@+id/textView" />

            <ImageView
                android:src="@drawable/more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout

                android:layout_marginLeft="10dp"
                android:id="@+id/linear6_mine"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">
                <ImageView
                    android:src="@mipmap/ic_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                 
                    android:text="游戏中心"/>



                <ImageView
                    android:src="@drawable/more"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@mipmap/img_kaibo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="200dp"
        android:paddingRight="5dp"/>
    <ImageView
        android:id="@+id/kaibo_normal"
        android:layout_width="95dp"
        android:layout_height="95dp"
        android:src="@drawable/select_kaibo"
        android:layout_alignParentRight="true"
        android:layout_marginTop="264dp"
        android:paddingRight="20dp"/>


</RelativeLayout>

</LinearLayout>
