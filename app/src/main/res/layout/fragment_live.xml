<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.acer.myzhibo.ui.fragment.live.LiveFragment">

       <RelativeLayout
           style="@style/styletoolbar"

           >
           <TextView
               android:id="@+id/tv_title_livefra"

               android:text="直播"
               android:textSize="18dp"
                android:layout_centerInParent="true"
               android:textColor="@android:color/black"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content" />

           <ImageView
               android:id="@+id/iv_search_livefragment"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:src="@drawable/search_selector"
               android:layout_margin="5dp"
               android:layout_centerVertical="true"
               android:layout_alignParentRight="true"/>


       </RelativeLayout>
    <com.jcodecraeer.xrecyclerview.XRecyclerView
        android:id="@+id/recycler_livefragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.jcodecraeer.xrecyclerview.XRecyclerView>

</LinearLayout>
